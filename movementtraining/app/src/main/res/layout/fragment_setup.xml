            <Button
                android:id="@+id/contButton"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Continue"
                />

        </LinearLayout>

    </ScrollView>

</layout>